{
  "name": "Lunary",
  "scopeName": "source.lunary",
  "fileTypes": ["lun"],
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#comments" },
    { "include": "#functions" },
    { "include": "#constants" },
    { "include": "#operators" }
  ],
  "repository": {
    "keywords": {
      "patterns": [{
        "name": "keyword.control.lunary",
        "match": "\\b(fn|use|from|and|or|xor|not|at|nil)\\b"
      }]
    },
    "strings": {
      "name": "string.quoted.double.lunary",
      "begin": "\"",
      "end": "\"",
      "patterns": [{
        "name": "constant.character.escape.lunary",
        "match": "\\\\."
      }, {
        "name": "variable.interpolation.lunary",
        "begin": "{",
        "end": "}",
        "patterns": [{ "include": "$self" }]
      }]
    },
    "comments": {
      "name": "comment.line.number-sign.lunary",
      "match": "#.*$"
    },
    "functions": {
      "patterns": [{
        "name": "entity.name.function.lunary",
        "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*[?!]*)(?=\\s*->)"
      }, {
        "name": "entity.name.function.call.lunary",
        "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*[?!]*)(?=\\s*\\()"
      }]
    },
    "constants": {
      "patterns": [{
        "name": "constant.language.lunary",
        "match": "\\b(true|false)\\b"
      }, {
        "name": "constant.numeric.lunary",
        "match": "\\b[0-9]+\\b"
      }]
    },
    "operators": {
      "patterns": [{
        "name": "keyword.operator.lunary",
        "match": "\\+|\\-|\\*|\\/|=|\\|>|~|\\."
      }]
    }
  }
}
